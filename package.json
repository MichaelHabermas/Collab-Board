{
  "name": "collab-board",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.2.0",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "concurrently \"bun run --cwd apps/client dev\" \"bun run --cwd apps/server dev\" --names client,server",
    "build": "bun run --cwd packages/shared-types build && bun run --cwd apps/client build && bun run build:server",
    "build:server": "bun build apps/server/src/server.ts --outdir apps/server/dist --target bun",
    "start": "bun run --cwd apps/server start",
    "typecheck": "tsc -b",
    "lint": "eslint apps/*/src packages/*/src",
    "lint:fix": "eslint apps/*/src packages/*/src --fix",
    "format": "prettier --write 'apps/*/src/**/*.{ts,tsx}' 'packages/*/src/**/*.ts' 'apps/client/vite.config.ts'",
    "test:run": "bun run --cwd apps/client test:run && bun run --cwd apps/server test:run",
    "test": "bun run --cwd apps/client test",
    "test:coverage": "bun run --cwd apps/client test:coverage",
    "test:e2e": "bun run --cwd apps/client test:e2e",
    "test:e2e:ui": "bun run --cwd apps/client test:e2e:ui",
    "verify:production": "bun run scripts/verify-production.ts",
    "validate": "bun run format && bun run typecheck && bun run lint && bun run test:run"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "concurrently": "^9.0.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  }
}
