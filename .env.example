# Server
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# MongoDB Atlas
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>.mongodb.net/collab-board

# Clerk Authentication (server: REST + Socket.io)
CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Clerk client (Vite) — must be prefixed with VITE_ to expose to client
VITE_CLERK_PUBLISHABLE_KEY=pk_test_...
# Client: server URL for Socket.io and API (default http://localhost:3000)
VITE_API_URL=http://localhost:3000

# Google Gemini AI
GEMINI_API_KEY=...

# E2E (Playwright) — optional; used by verify:production and test:e2e for authenticated flows
# Create a test user in Clerk and set these so E2E can sign in and verify socket, persistence, multiplayer
E2E_CLERK_EMAIL=...
E2E_CLERK_PASSWORD=...
